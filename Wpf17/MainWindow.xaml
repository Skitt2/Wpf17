<Window x:Class="Wpf17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf17"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <StackPanel>
            <local:ColorPicker x:Name="colorIndex" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Width="250" 
                               Height="60" 
                               ColorChanged="colorPickerChanged"/>
            <TextBlock x:Name="txb" Text="Привет!" FontSize="24" Margin="10" Padding="10" Background="White"/>
        </StackPanel>
    </Grid>
</Window>
